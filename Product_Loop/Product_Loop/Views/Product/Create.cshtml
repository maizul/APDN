@model Product_Loop.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@if (Model != null)
            {
                <h1>@Model.Name</h1>
                <h1>@Model.Id</h1>
                <h1>@Model.Price</h1>
            }
<form action="/Product/Create" method="post">
    <input type="text" placeholder="Name" value="@Model.Name" class="form-control" />
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

    <input type="text" placeholder="Id" value="@Model.Id" class="form-control" />
    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })

    <input type="text" placeholder="Price" value="@Model.Price" class="form-control" />
    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
    <input type="submit" value="Submit" />
</form>